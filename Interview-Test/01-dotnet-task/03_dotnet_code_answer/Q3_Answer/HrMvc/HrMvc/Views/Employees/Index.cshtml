@model HrMvc.Models.EmployeeList
@{
    ViewData["Title"] = "Employees by Salary (Plain SQL)";
}

<h2>Employees with Salary ≥ RM @Model.MinSalary.ToString("N2")</h2>

<form asp-action="Filter" method="post" class="mb-3">
    <label for="minSalary" class="form-label">Minimum Salary (RM)</label>
    <input id="minSalary" name="minSalary" type="number" step="0.01"
           class="form-control" value="@Model.MinSalary" />
    <button type="submit" class="btn btn-primary mt-2">Apply Filter</button>
    <a class="btn btn-link" href="@Url.Action("Index","Employees")">Reset</a>
</form>

@if (!Model.Rows.Any())
{
    <div class="alert alert-info">No employees match the current filter.</div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr><th>Id</th><th>Name</th><th>Department</th><th>Salary (RM)</th></tr>
        </thead>
        <tbody>
            @foreach (var e in Model.Rows)
            {
                <tr>
                    <td>@e.Id</td>
                    <td>@e.Name</td>
                    <td>@e.Department</td>
                    <td>@e.Salary.ToString("N2")</td>
                </tr>
            }
        </tbody>
    </table>
}

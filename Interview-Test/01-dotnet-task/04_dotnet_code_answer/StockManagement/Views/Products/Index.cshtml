@model IEnumerable<StockManagement.Models.Product>

    <h2>Product List</h2>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

    <table border="1">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Quantity</th>
            <th>Action</th>
        </tr>

        @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Quantity</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
            </td>
        </tr>
    }
    </table>

{
  "name": "Codespace with SQL Server",
  "dockerComposeFile": "docker-compose.yml",
  "service": "dev",
  "workspaceFolder": "/workspaces",
   "forwardPorts": [1433],
  //"postCreateCommand": "bash .devcontainer/setup-sqlcmd.sh || true",
  "postCreateCommand": "dotnet --info && sqlcmd -? || true",
  "customizations": {
    "vscode": {
      "settings": {
          "terminal.integrated.shell.linux": "/bin/bash"
        },
      "extensions": [
        "ms-mssql.mssql",
        "ms-dotnettools.csharp"
      ]
    }
  }
}
